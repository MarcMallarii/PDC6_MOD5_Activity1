        <Button Text="Clipboard" Clicked="ClipboardPage_Clicked"/>
        <Button Text="Geocoding" Clicked="GeocodingPage_Clicked"/>
        <Button Text="Geolocation" Clicked="GeolocationPage_Clicked"/>
        <Button Text="Maps" Clicked="MapsPage_Clicked"/>
